<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorMainBackGround">

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/left_guideline"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.05"/>

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/right_guideline"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.95"/>

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/top_guideline"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.025"/>

	<View
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:background="@drawable/ic_stripes_background"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintHeight_percent=".6"/>



	<FrameLayout
		android:id="@+id/frameLayout"
		app:layout_constraintTop_toBottomOf="@id/top_guideline"
		app:layout_constraintLeft_toRightOf="@id/left_guideline"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<ImageView
			android:id="@+id/profile_pic_imageView"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:src="@drawable/headshot"
			android:padding="6dp"/>
		<ImageView
			android:src="@drawable/rounded_frame"
			android:layout_width="100dp"
			android:layout_height="100dp" />
	</FrameLayout>

	<TextView
		android:id="@+id/time_of_day_textView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintStart_toEndOf="@+id/frameLayout"
		app:layout_constraintTop_toTopOf="@id/frameLayout"
		tools:text="Good Morning"
		android:layout_marginLeft="@dimen/margin_padding_size_small"
		android:textColor="@color/colorGray"
		android:fontFamily="@font/poppins"
		android:textSize="@dimen/text_size_medium"/>

	<TextView
		android:id="@+id/name_textView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		tools:text="Josh N."
		android:textColor="@android:color/white"
		app:layout_constraintLeft_toLeftOf="@id/time_of_day_textView"
		app:layout_constraintTop_toBottomOf="@id/time_of_day_textView"
		android:fontFamily="@font/poppins_semibold"
		android:textSize="@dimen/text_size_medium"/>

	<ImageView
		android:id="@+id/settings_imageView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/ic_settings"
		app:layout_constraintBottom_toBottomOf="@+id/frameLayout"
		app:layout_constraintEnd_toEndOf="@id/right_guideline"
		app:layout_constraintTop_toTopOf="@+id/top_guideline" />

	<androidx.cardview.widget.CardView
		android:id="@+id/status_cardView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@id/frameLayout"
		android:backgroundTint="@color/colorCardBackGround"
		app:layout_constraintLeft_toRightOf="@id/left_guideline"
		app:layout_constraintRight_toLeftOf="@id/right_guideline"
		android:layout_marginTop="@dimen/margin_padding_size_medium"
		app:cardCornerRadius="@dimen/card_corner_default">
		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="@dimen/margin_padding_size_small">

			<TextView
				android:id="@+id/textView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/poppins_semibold"
				android:text="Status"
				android:textColor="@android:color/white"
				android:textSize="@dimen/text_size_large"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/textView2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/margin_padding_size_small"
				android:fontFamily="@font/poppins"
				android:textSize="@dimen/text_size_small"
				android:text="Total Transactions"
				android:textColor="@android:color/darker_gray"
				app:layout_constraintStart_toStartOf="@+id/textView"
				app:layout_constraintTop_toBottomOf="@+id/textView" />

			<TextView
				android:id="@+id/total_messages_textView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/poppins"
				android:textColor="@android:color/white"
				android:textSize="@dimen/text_size_large"
				app:layout_constraintStart_toStartOf="@+id/textView2"
				app:layout_constraintTop_toBottomOf="@+id/textView2"
				tools:text="100" />

			<View
				android:id="@+id/view"
				android:layout_width="0dp"
				android:layout_height="1dp"
				android:background="@android:color/white"
				app:layout_constraintStart_toStartOf="@+id/total_messages_textView"
				app:layout_constraintTop_toBottomOf="@+id/total_messages_textView"
				app:layout_constraintWidth_percent=".45" />

			<TextView
				android:id="@+id/textView3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/poppins"
				android:text="Synced Transactions"
				android:textColor="@android:color/darker_gray"
				android:textSize="@dimen/text_size_small"
				app:layout_constraintStart_toStartOf="@+id/view"
				app:layout_constraintTop_toBottomOf="@+id/view"
				android:layout_marginTop="@dimen/margin_padding_size_small"/>

			<TextView
				android:id="@+id/synced_messages_textView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/poppins"
				android:textColor="@android:color/white"
				android:textSize="@dimen/text_size_large"
				app:layout_constraintStart_toStartOf="@+id/textView3"
				app:layout_constraintTop_toBottomOf="@+id/textView3"
				tools:text="56" />

			<android.widget.Button
				android:id="@+id/senders_button"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="Senders"
				android:gravity="center"
				android:textAllCaps="false"
				app:layout_constraintWidth_percent=".4"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="@id/textView2"
				android:textColor="@android:color/white"
				android:fontFamily="@font/poppins"
				android:textSize="@dimen/text_size_medium"
				android:drawableEnd="@drawable/ic_arrow_down"
				android:background="@drawable/ic_button_background_gradient"
				android:padding="@dimen/margin_padding_size_small"/>

			<View
				android:id="@+id/view2"
				android:layout_width="0dp"
				android:layout_height="1dp"
				android:background="@android:color/white"
				app:layout_constraintBottom_toBottomOf="@+id/view"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="@+id/view"
				app:layout_constraintWidth_percent=".45" />

			<android.widget.Button
				android:id="@+id/sync_button"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="Sync"
				android:textAllCaps="false"
				android:gravity="center"
				app:layout_constraintWidth_percent=".4"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="@id/textView3"
				android:textColor="@android:color/white"
				android:fontFamily="@font/poppins"
				android:textSize="@dimen/text_size_medium"
				android:drawableEnd="@drawable/ic_sync_green"
				android:background="@drawable/ic_button_background_green"
				android:padding="@dimen/margin_padding_size_small"/>
		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.cardview.widget.CardView>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/controls_constraint_layout"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintStart_toStartOf="@+id/status_cardView"
		app:layout_constraintEnd_toEndOf="@id/status_cardView"
		app:layout_constraintTop_toBottomOf="@id/status_cardView"
		android:layout_marginTop="@dimen/margin_padding_size_medium">

		<androidx.cardview.widget.CardView
			android:id="@+id/ynab_card"
			android:backgroundTint="@color/colorCardBackGround"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintWidth_percent=".2"
			app:cardCornerRadius="@dimen/card_corner_default">
			<LinearLayout
				android:backgroundTint="@android:color/transparent"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_gravity="center"
				android:padding="@dimen/margin_padding_size_small">
				<ImageView
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:src="@drawable/ic_ynab"
					android:layout_gravity="center"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="YNAB"
					android:layout_gravity="center"
					android:layout_marginTop="@dimen/margin_padding_size_micro"
					android:textSize="@dimen/text_size_small"
					android:fontFamily="@font/poppins"
					android:textColor="@android:color/white"/>
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<View
			android:id="@+id/view3"
			android:layout_width="0dp"
			android:layout_height="0dp"
			app:layout_constraintStart_toEndOf="@id/ynab_card"
			app:layout_constraintTop_toTopOf="@id/ynab_card"
			app:layout_constraintBottom_toBottomOf="@id/ynab_card"
			app:layout_constraintWidth_percent=".05"/>


		<androidx.cardview.widget.CardView
			android:id="@+id/import_card"
			android:backgroundTint="@color/colorCardBackGround"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toEndOf="@id/view3"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintWidth_percent=".2"
			app:cardCornerRadius="@dimen/card_corner_default">
			<LinearLayout
				android:backgroundTint="@android:color/transparent"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_gravity="center"
				android:padding="@dimen/margin_padding_size_small">
				<ImageView
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:src="@drawable/ic_import_transactions"
					android:layout_gravity="center"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Import"
					android:layout_gravity="center"
					android:layout_marginTop="@dimen/margin_padding_size_micro"
					android:textSize="@dimen/text_size_small"
					android:fontFamily="@font/poppins"
					android:textColor="@android:color/white"/>
			</LinearLayout>
		</androidx.cardview.widget.CardView>

		<View
			android:id="@+id/view4"
			android:layout_width="0dp"
			android:layout_height="0dp"
			app:layout_constraintStart_toEndOf="@id/import_card"
			app:layout_constraintTop_toTopOf="@id/import_card"
			app:layout_constraintBottom_toBottomOf="@id/import_card"
			app:layout_constraintWidth_percent=".05"/>

	</androidx.constraintlayout.widget.ConstraintLayout>


	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		app:layout_constraintTop_toBottomOf="@id/controls_constraint_layout"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		android:layout_marginTop="@dimen/margin_padding_size_medium"
		android:background="@drawable/top_round_corners">

		<androidx.constraintlayout.widget.Guideline
			android:id="@+id/left_inner_guideline"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintGuide_percent="0.05"/>

		<androidx.constraintlayout.widget.Guideline
			android:id="@+id/right_inner_guideline"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintGuide_percent="0.95"/>

		<TextView
			android:id="@+id/textView4"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin_padding_size_medium"
			android:fontFamily="@font/poppins_semibold"
			android:text="Recent Transactions"
			android:textColor="@android:color/white"
			android:textSize="@dimen/text_size_large"
			app:layout_constraintStart_toEndOf="@id/left_inner_guideline"
			app:layout_constraintTop_toTopOf="parent" />

		<ImageView
			android:id="@+id/sort_imageView"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:src="@drawable/ic_sort"
			app:layout_constraintEnd_toStartOf="@+id/right_inner_guideline"
			app:layout_constraintTop_toTopOf="@+id/textView4" />

		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/transactions_recyclerView"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			app:layout_constraintTop_toBottomOf="@id/textView4"
			app:layout_constraintStart_toEndOf="@id/left_inner_guideline"
			app:layout_constraintEnd_toEndOf="@id/right_inner_guideline"
			tools:itemCount="10"
			tools:listitem="@layout/item_transaction"
			android:orientation="vertical"
			android:overScrollMode="ifContentScrolls"
			android:scrollbars="vertical"
			app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


	</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>