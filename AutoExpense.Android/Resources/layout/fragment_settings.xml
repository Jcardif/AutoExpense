<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainBackGround">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.025"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/ic_stripes_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent=".6"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/transparent"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@android:color/white"
        app:title="Settings"
        app:titleTextAppearance="@style/ToolBarText"
        app:subtitleTextColor="@android:color/white"
        android:paddingLeft="@dimen/margin_padding_size_medium"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/status_cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorCardBackGround"
        app:layout_constraintLeft_toRightOf="@id/left_guideline"
        app:layout_constraintRight_toLeftOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/settings_toolbar"
        app:cardCornerRadius="@dimen/card_corner_default">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_padding_size_medium"
            android:paddingBottom="@dimen/margin_padding_size_medium">
            <Syncfusion.Android.DataForm.SfDataForm
                android:id="@+id/sf_data_form"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/save_settings_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Save Settings"
        android:background="@drawable/primary_color_button_round"
        app:layout_constraintTop_toBottomOf="@id/status_cardView"
        app:layout_constraintLeft_toRightOf="@id/left_guideline"
        app:layout_constraintRight_toLeftOf="@id/right_guideline"
        android:layout_margin="@dimen/margin_padding_size_large"
        android:textColor="@android:color/white"
        android:textSize="@dimen/margin_padding_size_medium"
        android:gravity="center"
        android:fontFamily="@font/poppins"/>


       <Button
        android:id="@+id/use_default_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Use Defaults"
        android:background="@drawable/primary_color_button_round"
        app:layout_constraintTop_toBottomOf="@id/save_settings_button"
        app:layout_constraintLeft_toRightOf="@id/left_guideline"
        app:layout_constraintRight_toLeftOf="@id/right_guideline"
        android:layout_margin="@dimen/margin_padding_size_large"
        android:textColor="@android:color/white"
        android:textSize="@dimen/margin_padding_size_medium"
        android:gravity="center"
        android:fontFamily="@font/poppins"/>





</androidx.constraintlayout.widget.ConstraintLayout>